{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh",
        "bash"
      ]
    },
    "zsh": {
      "command": "zls",
      "filetypes": [
        "zsh"
      ],
      "rootPatterns": [
        ".zshrc",
        ".zprofile"
      ]
    }
  }
}
